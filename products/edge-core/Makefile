# Edge Core — placeholder Makefile

.PHONY: help test build lint

help:
	@echo "Edge Core (shared library). When split to its own repo, add:"
	@echo "  test   → run pytest"
	@echo "  build  → build wheel (pyproject)"
	@echo "  lint   → black/ruff/mypy"

test:
	@echo "[placeholder] run: pytest -q"

build:
	@echo "[placeholder] run: python -m build"

lint:
	@echo "[placeholder] run: ruff check . && black --check . && mypy ."

