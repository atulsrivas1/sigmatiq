# Sigma Workers — placeholder Makefile

.PHONY: help build run lint

help:
	@echo "Sigma Workers (jobs/schedulers). When split to its own repo, add:"
	@echo "  build  → build worker images"
	@echo "  run    → run local worker"
	@echo "  lint   → black/ruff/mypy"

build:
	@echo "[placeholder] build worker Docker images"

run:
	@echo "[placeholder] run: python -m sigma_workers.worker"

lint:
	@echo "[placeholder] run: ruff check . && black --check . && mypy ."
